<Window x:Class="HelloWPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" FontSize="20" Background="White">
    <Grid>
        <Label Content="Login Screen" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" Background="#FFF03535" Height="65" Width="368"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="216,287,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.357,0.676" Width="102" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="477,288,0,0" VerticalAlignment="Top" Height="30" Width="94" Click="btnCancel_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="216,190,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="216,232,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="337,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="247" TextChanged="TextBox_TextChanged" RenderTransformOrigin="0.491,0.562"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="337,240,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="247" TextChanged="TextBox_TextChanged" RenderTransformOrigin="0.506,2.155"/>

    </Grid>
</Window>
