<Window x:Class="WpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF"
        mc:Ignorable="d"
        Title="Login to System" Height="450" Width="800">
    <Grid Margin="0,0,0,-16">
        <Label Content="Login to System" FontSize="30" HorizontalAlignment="Left" Margin="299,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" FontSize="20" HorizontalAlignment="Left" Margin="195,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" FontSize="20" HorizontalAlignment="Left" Margin="195,152,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" Text="admin@CompanyName.com" FontSize="20" HorizontalAlignment="Left" Margin="299,119,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="447"/>
        <PasswordBox x:Name="txtPassword" FontSize="20" Password="@1" HorizontalAlignment="Left" Margin="299,156,0,0" VerticalAlignment="Top" Width="447"/>
        <Button x:Name="btnLogin" Content="Login" FontSize="20" HorizontalAlignment="Left" Margin="299,0,0,0" VerticalAlignment="Center" Width="111" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" FontSize="20" HorizontalAlignment="Left" Margin="630,0,0,0" VerticalAlignment="Center" Width="116" Click="btnExit_Click"/>

    </Grid>
</Window>
