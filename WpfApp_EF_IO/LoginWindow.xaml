<Window x:Class="WpfApp_EF_IO.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF_IO"
        mc:Ignorable="d"
        Title="Login into system" Height="450" Width="800">
    <Grid>
        <Label Content="Login into system" FontSize="36" HorizontalAlignment="Left" Margin="276,50,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" FontSize="20" HorizontalAlignment="Left" Margin="217,152,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" FontSize="20" HorizontalAlignment="Left" Margin="217,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" FontSize="20" HorizontalAlignment="Left" Margin="340,156,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="333"/>
        <PasswordBox x:Name="txtPassword" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="333" Margin="340,207,0,0"/>
        <CheckBox FontSize="15" Content="Save Login Info" HorizontalAlignment="Left" Margin="343,263,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="343,307,0,0" VerticalAlignment="Top" Height="41" Width="123"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="550,307,0,0" VerticalAlignment="Top" Height="41" Width="123"/>

    </Grid>
</Window>
