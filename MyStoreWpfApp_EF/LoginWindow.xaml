<Window x:Class="MyStoreWpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EF"
        mc:Ignorable="d"
        Title="LoginToSystem" Height="450" Width="800">
    <Grid>
        <Label Content="Login to System" HorizontalAlignment="Left" Margin="354,77,0,0" VerticalAlignment="Top">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#FFB0E0E6" Offset="0.0"/>
                    <GradientStop Color="#FF4682B4" Offset="1.0"/>
                    <GradientStop Color="#FF5F9EA0" Offset="0.5"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email" 
               HorizontalAlignment="Left" 
               Margin="299,124,0,0" 
               VerticalAlignment="Top" 
               Height="24" 
               Width="42"/>
        <TextBox x:Name="txtEmail" 
                 HorizontalAlignment="Left" 
                 Margin="354,127,0,0" 
                 TextWrapping="Wrap" 
                 Text="admin@CompanyName.com" 
                 VerticalAlignment="Top" 
                 Width="180"/>
        <Label Content="Password" 
               HorizontalAlignment="Left" 
               Margin="290,153,0,0" 
               VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" 
                Content="Login" 
                HorizontalAlignment="Left" 
                Margin="355,197,0,0" 
                VerticalAlignment="Top" 
                Width="59" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" 
                Content="Cancel" 
                HorizontalAlignment="Left" 
                Margin="419,197,0,0" 
                VerticalAlignment="Top" 
                Width="55"/>
        <PasswordBox x:Name="txtPassword" 
                     Password="@1" 
                     HorizontalAlignment="Left" 
                     Margin="355,157,0,0" 
                     VerticalAlignment="Top" 
                     Width="179"/>

    </Grid>
</Window>
